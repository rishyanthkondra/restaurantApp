<link rel="stylesheet" href="/css/forms.css">
<link rel="stylesheet" href="/css/product.css">
</head>

<body>
<%- include('../includes/navigation.ejs') %>

<main>
    <form action="/menu_chef/recipeout" method="post">
        <% for(var i=0; i < ilist.length; i++) { %>
            <div class="form-control">
                <label for=ilist[i].ingredient_id> <%= ilist[i].ingredient_name %> </label>
                <input type="number" name=ilist[i].ingredient_id id=<%= ilist[i].ingredient_name %> min = "0" value="<%= ilist[i].quantity %>">
            </div>
        <% } %>
        <button class="btn" type="submit">Update</button>
        <input type="hidden" name="dish_id" value=<%= dish_id %> >
    </form>
    <form class="product-form" action="/menu_chef"+ method="get">
        <button class="btn" type="submit">Cancel</button>
    </form>
</main>
<%- include('../includes/end.ejs') %>

