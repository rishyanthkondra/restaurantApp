<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="/css/forms.css">
<link rel="stylesheet" href="/css/product.css">
<link rel="stylesheet" href="/css/cart.css">
</head>

<body>
<%- include('../includes/navigation.ejs') %>

<main>
    <div class="grid">
        <% for(var i=0; i < dishes.length; i++) { %>

            <article class="card product-item">                
                <header class="card__header">
                    <h1 class="card__title"><%= dishes[i].name %></h1>
                </header>
                <div class="card__image">
                    <img src="<%= dishes[i].image %>" height="150px" alt="<%= dishes[i].title %>">
                </div>
                <div class="card__content">
                    <h3 class="product__price">Price: <%= dishes[i].price  %></h3>
                </div>
                <div class="card__content">
                    <h3 class="product__price">Description: <%= dishes[i].description  %></h3>
                </div>
                <div class="card__content">
                    <h3 class="product__price">Quantity: <%= dishes[i].quantity  %></h3>
                </div>
                <div class="card__actions">
                    <form action="/menu/increment" method="post">
                        <button class="btn" type="submit">+</button>
                        <input type="hidden" name="dish_id" value=<%= dishes[i].id %> >
                    </form>
                </div>
                <div class="card__actions">
                    <form action="/menu/decrement" method="post">
                        <button class="btn" type="submit">-</button>
                        <input type="hidden" name="dish_id" value=<%= dishes[i].id %> >
                    </form>
                </div>
                <div class="card__actions">
                    <form action="/menu" method="get">
                        <button class="btn" type="submit">back</button>
                        <!-- <input type="hidden" name="dish_id" value=<%= dishes[i].id %> > -->
                    </form>
                </div>
            </article>
        <% } %>

    </div>
</main>

<%- include('../includes/end.ejs') %>